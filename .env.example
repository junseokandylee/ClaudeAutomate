# ClaudeParallelRunner Environment Configuration
# Copy this file to .env and fill in your values

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Debug Mode
# Set to true to enable verbose logging
DEBUG_MODE=false

# Optional: Custom Claude CLI path (if not in system PATH)
# CLAUDE_CLI_PATH=/usr/local/bin/claude

# Optional: Default workspace directory
# WORKSPACE_DIR=/path/to/your/projects

# Optional: Maximum parallel sessions
# MAX_PARALLEL_SESSIONS=4
